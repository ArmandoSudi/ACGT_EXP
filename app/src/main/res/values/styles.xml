<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- DID NOT WORK -->
    <style name="CancelButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorButtonNormal">@color/deepOrange700</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="headline_style">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@fonts/font_family_regular</item>
        <item name="android:textColor">#DE000000</item>
    </style>

    <style name="title_style">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@fonts/font_family_medium</item>
        <item name="android:textColor">#DE000000</item>
    </style>

    <style name="subheading_style">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@fonts/font_family_regular</item>
        <item name="android:textColor">#DE000000</item>
    </style>

    <style name="body_style_one">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@fonts/font_family_regular</item>
        <item name="android:textColor">#DE000000</item>
    </style>

    <style name="body_style_two">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@fonts/font_family_medium</item>
        <item name="android:textColor">#B3000000</item>
    </style>

    <style name="body_style_three">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@fonts/font_family_regular</item>
        <item name="android:textColor">#DE000000</item>
    </style>

    <style name="button_style">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@fonts/font_family_medium</item>
        <item name="android:textColor">#DE000000</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="card_heading">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@fonts/font_family_regular</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#0098cb</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/ic_add</item>
        <item name="android:textColor">@color/white</item>
    </style>



</resources>
