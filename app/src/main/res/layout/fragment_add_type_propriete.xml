<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddTypeProprieteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="8dp"
            android:paddingStart="8dp"
            android:paddingRight="8dp"
            android:paddingEnd="8dp"
            android:text="Ajouter un element de propriete"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="#686565"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="4dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:text="Type"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:elevation="4dp">

                <Spinner
                    android:id="@+id/type_propriete_sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:entries="@array/type_propriete"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/longueur_ti"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Entrez la longueur">
                <EditText
                    android:id="@+id/longueur_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/largeur_ti"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Entrez la largeur">
                <EditText
                    android:id="@+id/largeur_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"/>
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/surface_ti"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Entrez la surface">
                <EditText
                    android:id="@+id/surface_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/volume_ti"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Entrez le volume">
                <EditText
                    android:id="@+id/volume_et"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/type_materiau_ti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez le type materiau">
            <EditText
                android:id="@+id/type_materiau_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/nombre_ti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez le nombre">
            <EditText
                android:id="@+id/nombre_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/cout_unitaire_ti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez le cout unitaire">
            <EditText
                android:id="@+id/cout_unitaire_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/montant_ti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez le montant">
            <EditText
                android:id="@+id/montant_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="numberDecimal"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/autre_information_ti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez les autres informations">
            <EditText
                android:id="@+id/autre_information_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/date_signature_protocole_ti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez la date de la signature du protocole">
            <EditText
                android:id="@+id/date_signature_protocole_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/observation_ti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez une observation">
            <EditText
                android:id="@+id/observation_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/date_annulation_ti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez le date annulation">
            <EditText
                android:id="@+id/date_annulation_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/motif_ti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Entrez le motif">
            <EditText
                android:id="@+id/motif_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"/>
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/save_bt"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.Button.Colored"
                android:text="Enregistrer"/>
            <Button
                android:id="@+id/cancel_bt"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/deepOrange700"
                android:textColor="#FFFFFF"
                android:text="Annuler"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>